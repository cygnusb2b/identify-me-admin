{{#-bs/button "success" class="create float-right fixed-bottom" click=(route-action "linkTo" "campaign.gated-content.create")}}{{-ion "android-create"}} Create{{/-bs/button}}

{{!-- {{#-bs/button 'secondary' class='fixed-bottom' click=(route-action 'scrollToTop')}}{{-ion 'chevron-up'}}{{/-bs/button}} --}}

<div class="row">
  <div class="col">
    <h3 class="float-left mb-0">Gated Content Campaigns</h3>
  </div>
</div>
<hr>
<div class="row mb-4">
  <div class="col">
    <div class="row">
      <div class="col-8 col-sm-6">
        {{ partial 'list/search-controls'}}
      </div>
      <div class="col-4 col-sm-6">
        {{ partial 'list/filters' }}
      </div>
    </div>
  </div>
</div>

<div class="row mb-4">
  <div class="col">
    <div class="list-group">
      {{#each model as |campaign|}}
        {{#link-to "campaign.gated-content.edit" campaign.id class="list-group-item list-group-item-action flex-column align-items-start"}}
          <div class="d-flex w-100 justify-content-between">
            {{!-- <h5 class="mb-1">{{campaign.deploymentName}}</h5> --}}
            {{!-- <small>{{#if campaign.updatedDate}}{{moment-from-now campaign.updatedDate}}{{/if}}</small> --}}
          </div>
          <p class="mb-1">{{campaign.service.name}}</p>
          <p class="mb-1">{{campaign.name}}</p>
          <small>{{campaign.id}}</small>
        {{/link-to}}
      {{else}}
        <h5 class="text-primary">No results found.</h5>
      {{/each}}
    </div>
  </div>
</div>

<div class="row">
  <div class="col">
    {{ partial 'list/pagination' }}
  </div>
</div>

