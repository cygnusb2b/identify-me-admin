{{#-bs/row}}
  {{#-bs/col}}
    {{campaign/service-select
      services=services
      service=campaign.service
      loading=isLoading.services
      on-service-change=(action "checkValidity")
    }}
  {{/-bs/col}}
{{/-bs/row}}

<hr>

{{#-bs/row}}
  {{#-bs/col sm=6}}
    <div class="form-group">
      <label>Title</label>
      {{input type="text" class="form-control" value=campaign.props.title placeholder=defaults.title}}
    </div>
  {{/-bs/col}}
  {{#-bs/col sm=6}}
    <div class="form-group">
      <label>Submit Button Value</label>
      {{input type="text" class="form-control" value=campaign.props.buttonValue placeholder=defaults.buttonValue}}
    </div>
  {{/-bs/col}}
{{/-bs/row}}

{{#-bs/row}}
  {{#-bs/col}}
    <div class="form-group">
      <label>Body</label>
      {{textarea class="form-control" value=campaign.props.description placeholder=defaults.description}}
    </div>
  {{/-bs/col}}
{{/-bs/row}}

{{#-bs/row}}
  {{#-bs/col}}
    <div class="form-group">
      <label>Register URL</label>
      {{input type="text" class="form-control" value=campaign.props.registerUrl}}
    </div>
  {{/-bs/col}}
{{/-bs/row}}

<hr>

{{#-bs/row}}
  {{#-bs/col sm=6}}
    <div class="form-group">
      <label>Campaign Name</label>
      {{input type="text" class="form-control" value=campaign.name}}
    </div>
  {{/-bs/col}}
  {{#-bs/col sm=6}}
    <div class="form-group">
      <label>Promo Code</label>
      {{input type="text" class="form-control" value=campaign.promoCode}}
    </div>
  {{/-bs/col}}
{{/-bs/row}}
